---
import Layout from "../layouts/Layout.astro";

// import BKG from "../assets/green_landscape.webp";

const Title = "Flipper Cafe";
const Fonts = [
    {
        href: "https://fonts.googleapis.com/css2?family=Pacifico&display=swap",
        rel: "stylesheet",
    },
];

const Link = "https://github.com/PolyCatDev/flipper-cafe";
---

<Layout title={Title} fonts={Fonts}>
    <main>
        <h1 class="shadow">Flipper Cafe</h1>
        <h3 class="shadow">The coziest Flipper Zero database</h3>
        <a href="https://github.com/PolyCatDev/flipper-cafe"
            ><button>Get the files</button></a
        >
    </main>
</Layout>

<style>
    body {
        background-color: rgb(33, 37, 34);
        background-image: url(/green_landscape.webp);
        background-position: center;
        background-attachment: fixed;
        background-size: cover;
        height: 100vh;
        width: 100vw;
    }

    main {
        padding-top: 20vh;
        color: #ddd;
    }

    h1 {
        font-family: Pacifico;
        font-size: 700%;
        margin: 10px;
    }

    h3 {
        font-size: 180%;
        padding: 10px 0 10px 0;
    }

    @media (max-width: 642px) {
        h1 {
            font-size: 600%;
        }

        h3 {
            font-size: 160%;
        }
    }
    @media (max-width: 553px) {
        h1 {
            font-size: 500%;
        }

        h3 {
            font-size: 120%;
        }
    }

    @media (max-width: 464px) {
        h1 {
            font-size: 400%;
        }

        h3 {
            font-size: 100%;
        }
    }

    .shadow {
        text-shadow: 3px 3px 5px rgb(23, 22, 24);
    }

    button {
        font-size: 120%;
        font-weight: bold;
        background-color: #ddd;
        border-radius: 10px;
        padding: 10px 20px 10px 20px;
        margin: 10px;
        box-shadow: 0 0 10px black;
    }
</style>
